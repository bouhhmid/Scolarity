                <div class="table-responsive">
                    <table class="table table-hover align-middle table-bordered">
                        <thead class="bg-primary text-white">
                        <tr>
                            <th>#</th>
                            <th>Nom Cours</th>
                            <th>Enseignant Responsable</th>
                            <th>Classe Concernée</th>
                            <th>Description</th>
                            <th>Date Création</th>
                            <th>Actions</th>
                        </tr>

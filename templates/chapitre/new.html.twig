{% extends 'base_dash.html.twig' %}

{% block title %}Add Chapter{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="mb-4 text-center text-primary">  Add New Chapter</h1>
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="row g-3">
                            <div class="col-md-12">
                                {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.titre) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_label(form.contenu, 'Contenu', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.contenu) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.ordre, 'Ordre', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.ordre, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.ordre) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.dateCreation, 'Date de Cr√©ation', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.dateCreation, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.dateCreation) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_label(form.cours, 'Cours', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.cours, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.cours) }}
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-4">Save</button>
                            <a href="{{ path('app_chapitre_index') }}" class="btn btn-outline-secondary px-4">Cancel</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

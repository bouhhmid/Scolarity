{% extends 'base_dash.html.twig' %}

{% block title %}Chapitre Details{% endblock %}

{% block content %}
    <div class="container my-5">
        <!-- Breadcrumb -->
        <div class="row mb-4">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-light p-3 rounded shadow-sm">
                        <li class="breadcrumb-item"><a href="">Home</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_chapitre_index') }}">Chapitres</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chapitre Details</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="text-primary fw-bold">Chapitre Details</h1>
                <p class="text-muted">View all details for this chapter below.</p>
            </div>
        </div>

        <!-- Chapitre Details Card -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Chapitre Information</h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tbody>
                            <tr>
                                <th class="w-50">ID</th>
                                <td>{{ chapitre.id }}</td>
                            </tr>
                            <tr>
                                <th>Titre</th>
                                <td>{{ chapitre.titre }}</td>
                            </tr>
                            <tr>
                                <th>Contenu</th>
                                <td>{{ chapitre.contenu }}</td>
                            </tr>
                            <tr>
                                <th>Ordre</th>
                                <td>{{ chapitre.ordre }}</td>
                            </tr>
                            <tr>
                                <th>Date Cr√©ation</th>
                                <td>{{ chapitre.dateCreation ? chapitre.dateCreation|date('d M Y, H:i') : 'N/A' }}</td>
                            </tr>
                            <tr>
                                <th>Cours</th>
                                <td>{{ chapitre.cours.nomCours }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="{{ path('app_chapitre_index') }}" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a href="{{ path('app_chapitre_edit', {'id': chapitre.id}) }}" class="btn btn-warning me-2">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <form method="post" action="{{ path('app_chapitre_delete', {'id': chapitre.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapitre.id) }}">
                                <button class="btn btn-danger me-2">Delete</button>
                            </form>                           </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

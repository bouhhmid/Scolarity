{% extends 'base_dash.html.twig' %}

{% block title %}Edit Chapitre{% endblock %}

{% block content %}
    <div class="container my-5">
        <!-- Breadcrumb -->
        <div class="row mb-4">
            <div class="col-12">
                <nav aria-label="breadcrumb">

                </nav>
            </div>
        </div>

        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="text-primary fw-bold">Edit Chapitre</h1>
                <p class="text-muted">Make changes to the chapter details below.</p>
            </div>
        </div>

        <!-- Form Card -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="row g-3">
                            <!-- Titre -->
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Enter chapter title'}}) }}
                                    {{ form_errors(form.titre) }}
                                </div>
                            </div>

                            <!-- Contenu -->
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_label(form.contenu, 'Contenu', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'placeholder': 'Enter chapter content', 'rows': 5}}) }}
                                    {{ form_errors(form.contenu) }}
                                </div>
                            </div>

                            <!-- Ordre -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.ordre, 'Ordre', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.ordre, {'attr': {'class': 'form-control', 'placeholder': 'Enter order of the chapter'}}) }}
                                    {{ form_errors(form.ordre) }}
                                </div>
                            </div>

                            <!-- Date Creation -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.dateCreation, 'Date de Cr√©ation', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.dateCreation, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.dateCreation) }}
                                </div>
                            </div>

                            <!-- Cours -->
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_label(form.cours, 'Cours', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.cours, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.cours) }}
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                            <a href="{{ path('app_chapitre_index') }}" class="btn btn-outline-secondary px-4">Cancel</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Form -->
        <div class="row mt-4">
            <div class="col-md-8 offset-md-2 text-center">
                <form method="post" action="{{ path('app_chapitre_delete', {'id': chapitre.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapitre.id) }}">
                    <button class="btn btn-outline-danger px-4">Delete</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
